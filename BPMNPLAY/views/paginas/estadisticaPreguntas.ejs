                    <div class="card" style="margin-top: 10px">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5>Pregunta: <%=(i+1) %></h5>
                                    <p><%=preguntas[i].enunciado%></p>
                                    <canvas id="myChart<%=(i+1)%>" width="100" height="100"></canvas>
                                </div>
                                <div class="col-md-4">
                                    <% if(preguntas[i].imagen != undefined || preguntas[i].imagenEnunciado != undefined) { %>
                                        <h5>Imagen</h5>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
