                <br>
                <a href="#" class="btn btn-success">Estadísticas</a>
            </div>
        </div>
        <%  }%>
        <div class="card text-white bg-dark mb-3">
            <div class="card-body">
                <form action="/ingresoMateria" method="post">
                <h5 class="card-title">Agregar Materia</h5>
                <input type="text" class="form-control"  placeholder="Nombre de la materia" name="nombreMateria" style="margin-bottom: 10px">
                <input type="submit" class="btn btn-primary" style="margin-bottom: 10px" value="Agregar Materia">
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
</div>
