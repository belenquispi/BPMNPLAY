<!DOCTYPE html>
<html lang="es">
<head>
    <% include ../../parciales/head %>
    <meta http-equiv="Content-Type" content="text/html"/>
    <title>Resultados Unir</title>
</head>
<body>
<header>
    <% include ../../parciales/headerProfesor %>
</header>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/ingresoParticipante">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/ingresoParticipante">Temáticas</a></li>
        <li class="breadcrumb-item"><a href="/retosMateria?facilitador=<%= facilitador %>&materia=<%= materia %>">Desafíos</a>
        </li>
    </ol>
</nav>
<div class="container">
    <div class="row" style="margin-bottom: 10px">
        <div class="col-md-12 text-center">
            <h3>Desafío de Unir Finalizado</h3>
        </div>
        <div class="col-md-6">
            <h4>Puntaje obtenido: <%= puntaje %></h4>
        </div>
        <div class="col-md-6">
            <% for(let i = 0; i < puntaje; i++)
            { %>
            <i class="fas fa-star fa-5x fa-spin " style="color:gold"></i>
            <% } %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6" style="margin: 10px">
            <div class="row border border-info rounded">
                <h3 style="margin: 10px">Pares encontrados</h3>
            </div>
            <div class="row border border-info rounded" style="margin-top: 10px; height: 421.98px">

                <% for(let i = 0; i < preguntas.length; i++)
                { %>
                <div class="col-md-12 " style="margin: 10px">
                    <div class="row">
                    <% if(respuestas.indexOf(preguntas[i].texto) >= 0) { %>
                    <div class="col-md-4">
                        <img id="imagenAUnir<%= (i + 1) %>" src="<%= preguntas[i].imagen %>"
                             height="50" width="50">
                    </div>
                    <div class="col-md-8">
                        <label><%= preguntas[i].texto %></label>
                    </div>
                    <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <div class="col-md-5" style="margin: 10px">
            <div class="row border border-info rounded">
                <h3 style="margin: 10px">Pares no encontrados</h3>
            </div>
            <div class="row border border-info rounded" style="margin-top: 10px ; height: 421.98px">
                <% for(let i = 0; i < preguntas.length; i++)
                { %>
                <div class="col-md-12 " style="margin: 10px">
                <div class="row unir">
                    <% if(respuestas.indexOf(preguntas[i].texto) < 0) { %>
                    <div class="col-md-4">
                        <img id="imagenAUnir<%= (i + 1) %>" src="<%= preguntas[i].imagen %>"
                             height="50" width="50">
                    </div>
                    <div class="col-md-8">
                        <label><%= preguntas[i].texto %></label>
                    </div>
                    <% } %>
                </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/retosMateria" method="post">
                <input type="text" name="facilitador" hidden value="<%= facilitador %>">
                <input type="text" name="materia" hidden value="<%= materia %>">
                <button class="btn btn-info" type="submit"><i class="fas fa-undo-alt"></i> Regresar a desafíos</button>
            </form>
        </div>
        <div class="col-md-4"></div>

    </div>
</div>
</body>
</html>